<!--It is common decourm to keep partials that will be shared accross many
views inside of a /shared directory-->

<!-- any is equal to !empty? -->
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <!--Pluralize = a rails helper that pluralizes words respectively-->
      The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
      
