<% provide(:title, 'Edit user')%>
<h1> Update your profile </h1>


<div class = row>
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <!--This is a partial found in the views/shared directory-->
    <!--Password must be blank is printed twice since 
    https://stackoverflow.com/questions/17116696/password-cant-be-blank-displayed-twice, this is later taken care of in the tutorial-->
    
      <!--Passes 'object' to the _error_messages partial-->
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>      
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
    
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target= "_blank" rel="noopener"> change </a>
    </div>
  </div>
</div>
